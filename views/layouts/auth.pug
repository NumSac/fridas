doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title} | My App
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
        block styles
        style.
            .auth-wrapper {
                min-height: 100vh;
                display: flex;
                align-items: center;
                background: #f8f9fa;
            }
            .auth-card {
                width: 100%;
                max-width: 400px;
                margin: 0 auto;
                padding: 2rem;
                background: white;
                border-radius: 0.5rem;
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
            }

    body.auth-wrapper
        .auth-card
            block content