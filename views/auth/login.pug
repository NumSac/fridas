extends ../layouts/auth.pug

block content
  form(action="/auth/login" method="POST")
    .mb-3
      label.form-label Email
      input.form-control(
        type="email"
        name="email"
        required
      )

    .mb-3
      label.form-label Password
      input.form-control(
        type="password"
        name="password"
        required
      )

    button.btn.btn-primary.w-100(type="submit") Sign In